<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phattarapong.liveat500px.fragment.MainFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_item"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/btnNewPhotos"
        android:textColor="#FFFFFF"
        android:background="@drawable/selector_round_rect_button_blue"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="New Photos"/>
</RelativeLayout>
